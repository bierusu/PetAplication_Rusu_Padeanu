@page
@model PetAplication.Pages.Requests.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pet Room Reservation</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Facility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Facility.Location)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Pet.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].CheckIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].CheckOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Request)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Facility.Room)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Facility.Location.LocationName)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Pet.Name)
                </td>
                <td>
                    @item.CheckIn.ToShortDateString()
                </td>
                <td>
                    @item.CheckOut.ToShortDateString()
                </td>
                <td>
                    @($"{item.TotalPrice:C} ")
                </td>

                <td>
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
